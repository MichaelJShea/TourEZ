@model ViewModel


    <table class="table table-dark mt-2">
        <thead>
            <tr>
                <th scope="col"><h1 class="text-primary">Event:</h1></th>
                <th scope="col"><h1>"@Model.ThisEvent.eventName"</h1></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row" class="text-primary"><h5>Location:</h5></th>
                <td><h5>@Model.ThisEvent.location</h5></td>
            </tr>
            <tr>
                <th scope="row"class="text-primary"><h5>Start Date:</h5></th>
                <td><h5>@Model.ThisEvent.start.ToString("dddd,dd MMMM yyyy")</h5></td>
            </tr>
            <tr>
                <th scope="row"class="text-primary"><h5>Start Time:</h5></th>
                <td><p>@Model.ThisEvent.start.ToString("hh:mm tt")</p></td>
            </tr>
            <tr>
                <th scope="row"class="text-primary"><h5>End Date:</h5></th>
                <td><h5>@Model.ThisEvent.end.ToString("dddd,dd MMMM yyyy")</h5></td>
            </tr>
            <tr>
                <th scope="row"class="text-primary"><h5>End Time:</h5></th>
                <td><p>@Model.ThisEvent.end.ToString("hh:mm tt")</p></td>
            </tr>
        </tbody>
    </table>


